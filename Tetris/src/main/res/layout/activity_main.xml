<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication.MainActivity">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TableLayout"
            android:layout_row="2"
            android:layout_rowSpan="4"
            android:layout_column="0"
            android:layout_columnSpan="5">

        </TableLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView1"
            android:layout_row="2"
            android:background="@mipmap/ic_launcher"
            android:layout_column="5" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_row="3"
            android:background="@mipmap/ic_launcher"
            android:layout_column="5" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_row="4"
            android:background="@mipmap/ic_launcher"
            android:layout_column="5" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:layout_row="5"
            android:background="@mipmap/ic_launcher"
            android:layout_column="5" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonLeft"
            android:background="@drawable/button_test"
            android:layout_row="9"
            android:layout_column="1" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonUp"
            android:background="@drawable/button_test"
            android:layout_row="8"
            android:layout_column="2" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonRight"
            android:background="@drawable/button_test"
            android:layout_row="9"
            android:layout_column="3" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonDown"
            android:background="@drawable/button_test"
            android:layout_row="10"
            android:layout_column="2" />

    </GridLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonBig"
        android:background="@drawable/button_big"
        android:layout_alignBottom="@+id/gridLayout"
        android:layout_alignParentRight="@+id/gridLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="38dp"
        android:layout_marginRight="70dp"/>

</RelativeLayout>
